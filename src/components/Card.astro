<style>
    .card{
    width: 90%;
    max-width: 375px;
    margin:auto;
    padding: 15px;
    background-color: var(--color-tarjeta);
    border-radius: 25px;
    box-shadow: 0 15px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
   }
   img{
    width: 100%;
    border-radius: 15px;
    display: block;
   }
   .card-content{
    padding:20px;
    margin-top: 5px;
    }
    .card-content .title{
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-titulo-900);
    margin-bottom: 15px;
   }
   .card-content .description{
    font-size: 15px;
    font-weight: 400;
    color: var(--color-parrafo-500);
    margin-top: 10px;
    margin-bottom: 15px; 
   }

   @media (min-width: 768px){
    .card{
        max-width: 600px;
    }
    .card-content{
        padding: 25px;
    }
   }

    @media (min-width: 1440px){
        .card{
        max-width: 375px;
        height: auto;
        padding: 20px;
        }
        img{
        width: 90%;
        margin:  0 auto;
        }
       .card-content {
       padding: 20px; /* MÃ¡s espaciado en pantallas grandes */
       overflow: hidden;
       }
       .card-content .title{
        font-size: 1.5rem;
        text-align: center;
       }
       .card-content .description{
        font-size: 1rem;
       }
    }
</style>


<div class="card">

    <div class="card-imgen">
      <img src="/img/image-QR.png" alt="QR Code">
    </div>

    <div class="card-content">
      <h1 class="title">Improve your front-end skills by building projects</h1>
      <p class="description">Scan the QR code to visit Frontend Mentor and take your coding skills to the next level</p>
    </div>

</div>